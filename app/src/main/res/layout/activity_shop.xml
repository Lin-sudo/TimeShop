<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".ShopActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Shop"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/store"
        android:scaleType="fitCenter"
        android:layout_gravity="center"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome! Enjoy your shopping!"
        android:textSize="20sp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="30dp">

        <Button
            android:id="@+id/btn_learn"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/learning"/>
        <ImageButton
            android:id="@+id/btn_plan"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/weekly_mission"/>
        <ImageButton
            android:id="@+id/btn_entertainment"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/entertainment"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="自定义:"
            android:textSize="13sp"/>
        <EditText
            android:id="@+id/et_editMoney"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_weight="4"
            android:maxLines="1"/>
        <Button
            android:id="@+id/btn_editMoney"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>